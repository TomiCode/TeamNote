<Window x:Class="TeamNote.GUI.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamNote.GUI"
        mc:Ignorable="d"
        Title="Splash" Height="350" Width="350" WindowStyle="None" Background="{x:Null}" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" AllowsTransparency="True" Topmost="True" IsTabStop="False" ShowInTaskbar="False">
  <Window.CacheMode>
    <BitmapCache EnableClearType="True" SnapsToDevicePixels="True"/>
  </Window.CacheMode>
  <Grid>
    <Image HorizontalAlignment="Center" VerticalAlignment="Top" Source="/TeamNote_Client;component/Resources/splash.png"/>
    <Label x:Name="lbStatus" Content="{}{status content}" HorizontalAlignment="Center" Margin="18,0,0,4" VerticalAlignment="center" FontSize="14" Foreground="#E5EAEAEA" SnapsToDevicePixels="True" Background="Transparent" FontFamily="/TeamNote_Client;component/Fonts/#Ubuntu" >
      <Label.Effect>
        <DropShadowEffect ShadowDepth="0" Direction="0" BlurRadius="4" RenderingBias="Quality" Color="#72000000" Opacity="0.55"/>
      </Label.Effect>
    </Label>
  </Grid>
</Window>
