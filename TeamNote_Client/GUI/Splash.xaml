<Window x:Class="TeamNote.GUI.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamNote.GUI"
        mc:Ignorable="d"
        Title="Splash" Height="160" Width="400" WindowStyle="None" Background="{x:Null}" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
  <Grid Margin="10">
    <Label x:Name="lbl_status" Content="{}{status content}" HorizontalAlignment="Center" Margin="0,0,0,5" VerticalAlignment="Bottom" FontFamily="{DynamicResource GlobalLightFont}" FontSize="14" Foreground="#BFFFFFFF">
      <Label.Effect>
        <DropShadowEffect ShadowDepth="0" Direction="0" RenderingBias="Quality" Opacity="0.9"/>
      </Label.Effect>
    </Label>
    <Image x:Name="img_logotype" HorizontalAlignment="Center" Height="96" Margin="0" VerticalAlignment="Top" Width="96" Source="/TeamNote_Client;component/Resources/initium_logotype.png"/>
  </Grid>
</Window>
